<div class="container">
  <h2>Okuma Social:</h2>
  {% comment %} <ul>
    {% if section.settings.twitter_url != blank %}
    <li><a href="{{ section.settings.twitter_url }}" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
    {% endif %}
    {% if section.settings.facebook_url != blank %}
    <li><a href="{{ section.settings.facebook_url }}" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
    {% endif %}
    {% if section.settings.youtube_url != blank %}
    <li><a href="{{ section.settings.youtube_url }}" target="_blank"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
    {% endif %}
    {% if section.settings.instagram_url != blank %}
    <li><a href="{{ section.settings.instagram_url }}" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
    {% endif %}
    {% if section.settings.pinterest_url != blank %}
    <li><a href="{{ section.settings.pinterest_url }}" target="_blank"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a></li>
    {% endif %}
  </ul> {% endcomment %}
  {%- assign social_icons = "twitter|facebook|google-plus|pinterest|instagram|tumblr|youtube-play|vimeo|behance|github|flickr|rss" | split: "|" | uniq -%}
  <ul class="social-icons"  id="social-icons-{{block.id}}" >
    {%- assign social_number = social_icons.size | minus:1 -%}
    {%- for i in (0..social_number) -%}
    {%- assign social_name = 'social_icon_' | append:social_icons[i] -%}
    {%- if settings[social_name] != '' -%}
    <li><a target="_blank" href="{{settings[social_name]}}"><i class="fa fa-{{social_icons[i]}}"></i></a></li>
    {%- endif -%}
    {%- endfor -%}
  </ul>
</div>

{% schema %}
{
  "name": "Okuma Social",
  "class": "index-section section-wrapper okuma-social",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible_on_mobile",
      "label": "Show on Mobile",
      "default": true
    },
    {
      "type": "text",
      "id": "twitter_url",
      "label": "Twitter Url",
      "default": "#"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook Url",
      "default": "#"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "Youtube Url",
      "default": "#"
    },
    {
      "type": "text",
      "id": "instagram_url",
      "label": "Instagram Url",
      "default": "#"
    },
    {
      "type": "text",
      "id": "pinterest_url",
      "label": "Pinterest Url",
      "default": "#"
    }
  ],
  "presets": [
    {
      "name": "Okuma Social",
      "category": "Olibro Design",
      "settings": {
        "visible_on_mobile": true
      }
    }
  ]
}
{% endschema %}
