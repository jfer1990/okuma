</style>

</div>

<div
  class="full-banner"
  style="
    background-image: url('//cdn.shopify.com/s/files/1/0060/3770/0678/files/fab19412-3a5a-11e9-8732-ca3af03def11_1440x.jpg?v=1551251867');
  "
>
  <div
    class="custom-field custom-field__collection-heading custom-field__type--text"
  >
    <p class="collection_heading">
      GET THE LATEST
    </p>
  </div>
  <h1 class="collection_title">News</h1>
  <div class="custom-field custom-field__introduction custom-field__type--text">
    <p class="collection_introduction">
      FISHING TIPS, EVENTS &amp; MORE
    </p>
  </div>
</div>
<div class="blog-wrapper">
  {%- paginate blog.articles by 6 -%}
  <div class="large--one-whole">
    <div class="blog-tags">
      <div class="tags-item">
        <a href="/blogs/news">All News & Events</a>
      </div>

      <div class="tags-item">
        <a href="#">How To</a>
      </div>

      <div class="tags-item">
        <a href="#">Tune-Up Tuesdays</a>
      </div>
    </div>

    <div class="product-now-show">
      {%- for article in blog.articles -%}
      <div class="blog-items">
        <div class="blog-content">
          <h2>
            <a href="{{article.url}}">{{article.title}}</a>
          </h2>
          <p>
            {%- if article.excerpt != '' -%}
          	{{article.excerpt}}
          	{%- else -%}
          	{{article.content | strip_html | truncatewords: 20}}
          	{%- endif -%}
          </p>
          <a class="read-more" href="{{article.url}}"
            >READ MORE</a
          >
        </div>

        <div class="blog-image">
          <img alt="{{article.title | escape}}" src="{{article.image.src | img_url: '1200x679', crop: 'top'}}" />
        </div>
      </div>
      {% endfor %}
    </div>
    {%- if settings.blog_pagination_type == "1" -%}
    {%- include 'pagination' -%}
    {%- else -%}
    <div class="pagination-ajax">
      <a href="javascript:void(0);" data-page="2" id="load-more" data-loading-text="{{'blogs.general.loading' | t}}" class="button">{{'blogs.general.load_more' | t}}</a>
    </div>
    {%- endif -%}
  </div>
  {%- endpaginate -%}
</div>