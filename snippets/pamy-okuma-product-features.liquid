
  <h3 class="tab-heading">Features</h3>

  {% if product.metafields.pdetail.feature_img %}
  <div class="row">
    <div class="col-xs-12 col-md-6 feature-list-col">
      <div class="feature-list-expand">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="feature-list">
                {% if product.metafields.pdetail.brand_logo %}
                  <div class="brand-logo">
                    <img src="{{product.metafields.pdetail.brand_logo}}" />
                  </div>
                {% endif %}
                {{product.metafields.pdetail.features}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 inspired-fishing-col">
      <div class="inspired-fishing" style="background-image: url('{{product.metafields.pdetail.feature_img}}');"></div>
    </div>
  </div>
  {% else %}
    <div class="row">
      <div class="col-xs-12 col-md-6 feature-list-col">
        <div class="feature-list-expand">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <div class="feature-list">
                  {% if product.metafields.pdetail.brand_logo %}
                    <div class="brand-logo">
                      <img src="{{product.metafields.pdetail.brand_logo}}" />
                    </div>
                  {% endif %}
                  {{product.metafields.pdetail.features}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}